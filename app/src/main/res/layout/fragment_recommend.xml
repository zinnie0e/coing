<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_10"
    tools:context=".fragment.RecommendFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/claen"
                android:src="@drawable/ic_expand_left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center"
                android:text="추천 문장"
                android:textColor="@color/base_100"
                android:textSize="16dp" />

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/claen"
                android:src="@drawable/ic_close" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_icon_random" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:text="@string/status_random"
                    android:textColor="@color/base_60"
                    android:textSize="12dp" />

                <ImageButton
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/claen"
                    android:src="@drawable/ic_close" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="64dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/layout_background_base_0_8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/pretendard_semibold"
                    android:inputType="textMultiLine"
                    android:paddingLeft="13dp"
                    android:paddingTop="34dp"
                    android:paddingRight="13dp"
                    android:paddingBottom="12dp"
                    android:scrollHorizontally="false"
                    android:textSize="16dp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/base_30" />

                <TextView
                    android:id="@+id/txtko"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/pretendard_regular"
                    android:inputType="textMultiLine"
                    android:paddingLeft="13dp"
                    android:paddingTop="34dp"
                    android:paddingRight="13dp"
                    android:paddingBottom="16dp"
                    android:scrollHorizontally="false"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_words"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/layout_background_base_0_8"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="단어장"
                    android:textColor="@color/base_60"
                    android:textSize="12dp" />

                <ListView
                    android:id="@+id/lst_words"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/claen"
                    android:dividerHeight="17dp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</androidx.core.widget.NestedScrollView>