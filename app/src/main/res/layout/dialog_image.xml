<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#747474">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layout_background_base_0_top"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btn_lyCamera"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="32dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginLeft="32dp"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_bold"
                android:text="사진 촬영하기"
                android:textColor="@color/base_100"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginRight="24dp"
                app:srcCompat="@drawable/ic_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_lyGallery"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginLeft="32dp"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_bold"
                android:text="사진 선택하기"
                android:textColor="@color/base_100"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginRight="24dp"
                app:srcCompat="@drawable/ic_arrow_right" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="28dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/layout_background_base_0_border"
            android:text="취소"
            android:textColor="@color/base_70"
            android:textSize="14dp"
            android:fontFamily="@font/pretendard_semibold"/>

    </LinearLayout>
</RelativeLayout>